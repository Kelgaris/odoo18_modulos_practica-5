<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_liga_partido_wizard_form" model="ir.ui.view">
        <field name="name">liga.partido.wizard.form</field>
        <field name="model">liga.partido.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Partido">
                <group>
                    <field name="equipo_local_id"/>
                    <field name="equipo_visitante_id"/>
                </group>

                <group>
                    <field name="goles_local"/>
                    <field name="goles_visitante"/>
                </group>

                <footer>
                    <button string="Crear"
                            type="object"
                            name="action_crear_partido"
                            class="btn-primary"/>

                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_liga_partido_wizard" model="ir.actions.act_window">
        <field name="name">Nuevo Partido</field>
        <field name="res_model">liga.partido.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
