<!-- views/modulo.xml -->
<odoo>
    <!-- Vista árbol -->
    <record id="view_modulo_list" model="ir.ui.view">
        <field name="name">instituto.modulo.list</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="ciclo_id"/>
                <field name="profesor_id"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_modulo_form" model="ir.ui.view">
        <field name="name">instituto.modulo.form</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ciclo_id"/>
                        <field name="profesor_id"/>
                    </group>
                    <notebook>
                        <page string="Alumnos">
                            <field name="alumno_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_modulos" model="ir.actions.act_window">
        <field name="name">Módulos</field>
        <field name="res_model">instituto.modulo</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_modulos" name="Módulos"
              parent="menu_instituto_root"
              action="action_modulos"/>
</odoo>
