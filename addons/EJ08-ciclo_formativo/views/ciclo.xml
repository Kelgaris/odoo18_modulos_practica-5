<!-- views/ciclo.xml -->
<odoo>
    <!-- Vista árbol -->
    <record id="view_ciclo_list" model="ir.ui.view">
        <field name="name">instituto.ciclo.list</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="codigo"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_ciclo_form" model="ir.ui.view">
        <field name="name">instituto.ciclo.form</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="codigo"/>
                    </group>
                    <notebook>
                        <page string="Módulos">
                            <field name="modulo_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="profesor_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_ciclos" model="ir.actions.act_window">
        <field name="name">Ciclos Formativos</field>
        <field name="res_model">instituto.ciclo</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_instituto_root" name="Instituto"/>
    
    <menuitem id="menu_ciclos" name="Ciclos Formativos"
              parent="menu_instituto_root"
              action="action_ciclos"/>
</odoo>
