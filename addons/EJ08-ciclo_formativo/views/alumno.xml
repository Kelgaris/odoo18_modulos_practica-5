<!-- views/alumno.xml -->
<odoo>
    <!-- Vista árbol -->
    <record id="view_alumno_list" model="ir.ui.view">
        <field name="name">instituto.alumno.list</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">instituto.alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                    </group>
                    <notebook>
                        <page string="Módulos">
                            <field name="modulo_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="ciclo_id"/>
                                    <field name="profesor_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_alumnos" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">instituto.alumno</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_alumnos" name="Alumnos"
              parent="menu_instituto_root"
              action="action_alumnos"/>
</odoo>
